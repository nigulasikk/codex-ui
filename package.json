{
  "name": "codex-ui",
  "displayName": "Codex UI",
  "description": "A VSCode extension that wraps around codex-cli to provide a user-friendly interface for AI-assisted coding",
  "localDevelopment": {
    "setup": "npm install",
    "build": "npm run compile",
    "watch": "npm run watch",
    "test": "Press F5 in VSCode to launch the Extension Development Host",
    "instructions": [
      "1. Clone the repository: git clone https://github.com/nigulasikk/codex-ui.git",
      "2. Navigate to the project directory: cd codex-ui",
      "3. Install dependencies: npm install",
      "4. Compile the extension: npm run compile",
      "5. Press F5 in VSCode to launch the Extension Development Host",
      "6. In the Extension Development Host, open the command palette (Ctrl+Shift+P)",
      "7. Run the command 'Open Codex UI' to open the extension UI",
      "8. Configure your API settings and start using the extension"
    ]
  },
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:codex-ui.mainView",
    "onCommand:codex-ui.executeWithFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codex-ui-sidebar",
          "title": "Codex UI",
          "icon": "resources/codex-icon.svg"
        }
      ]
    },
    "views": {
      "codex-ui-sidebar": [
        {
          "type": "webview",
          "id": "codex-ui.mainView",
          "name": "Codex UI",
          "icon": "resources/codex-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "codex-ui.executeWithFile",
        "title": "Execute Codex with Current File"
      }
    ],
    "configuration": {
      "title": "Codex UI",
      "properties": {
        "codex-ui.apiProvider": {
          "type": "string",
          "default": "openrouter",
          "enum": ["openrouter", "qwen", "ollama"],
          "enumDescriptions": [
            "OpenRouter (支持多种AI模型)",
            "通义千问 (阿里巴巴的AI模型)",
            "Ollama (本地AI模型)"
          ],
          "description": "选择API提供商"
        },
        "codex-ui.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenRouter API Key"
        },
        "codex-ui.qwenApiKey": {
          "type": "string",
          "default": "",
          "description": "通义千问 API Key"
        },
        "codex-ui.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API 端点"
        },
        "codex-ui.ollamaModel": {
          "type": "string",
          "default": "codellama",
          "description": "Ollama 模型名称"
        },
        "codex-ui.approvalMode": {
          "type": "string",
          "default": "manual",
          "enum": ["auto", "manual", "suggest"],
          "enumDescriptions": [
            "自动执行生成的命令",
            "在执行命令前需要手动确认",
            "只提供建议，不执行命令"
          ],
          "description": "Codex 命令执行模式"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@openai/codex": "^0.1.2504172351",
    "axios": "^1.8.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/vscode": "^1.80.0",
    "glob": "^10.3.10",
    "mocha": "^10.3.0",
    "typescript": "^5.3.3"
  }
}
